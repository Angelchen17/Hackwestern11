{
  "name": "Python 3",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "test.py"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "updateContentCommand": "sudo apt update && sudo apt upgrade -y && pip install --user --upgrade pip && [ -f requirements.txt ] && pip install --user -r requirements.txt || echo 'No requirements.txt found' && pip install --user streamlit && echo 'âœ… Dependencies installed'",
  "postAttachCommand": {
    "server": "streamlit run test.py --server.enableCORS false --server.enableXsrfProtection false --server.address 0.0.0.0"
  },
  "portsAttributes": {
    "8501": {
      "label": "Streamlit App",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [8501],
  "remoteEnv": {
    "AUTH0_CLIENT_ID": "${{secrets.AUTH0_CLIENT_ID}}",
    "AUTH0_CLIENT_SECRET": "${{secrets.AUTH0_CLIENT_SECRET}}",
    "AUTH0_DOMAIN": "${{secrets.AUTH0_DOMAIN}}",
    "APP_SECRET_KEY": "${{secrets.APP_SECRET_KEY}}"
  }
}
